{
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "h"
  },
  "exclude": ["node_modules", "dist"]
}
