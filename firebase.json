{
  "hosting": {
    "public": "out",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=315360000"
          }
        ]
      },
      {
        "source": "_next/**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=315360000"
          }
        ]
      }
    ]
  }
}
